<UserControl x:Class="PW3.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PW3"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <StackPanel Margin="20" KeyDown="UserControl_KeyDown">
        <TextBlock Text="Вхід в акаунт"
                       FontSize="20"
                       FontWeight="Bold"
                       FontFamily="Comic Sans MS"
                       Foreground="SteelBlue"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
        <TextBox x:Name="txtUsername"
                 Margin="0,0,0,10"
                 ToolTip="Введіть ім'я користувача"/>
        <PasswordBox x:Name="pwdPassword"
                     Margin="0,0,0,10"
                     ToolTip="Введіть пароль"/>
        <Button x:Name="btnLogin"
                Content="Увійти"
                Click="btnLogin_Click"
                Background="SteelBlue"
                Foreground="White"
                Margin="0,0,0,10"/>
        <TextBlock x:Name="txtResult"
                   Foreground="Green"
                   FontWeight="Bold"/>
    </StackPanel>
</UserControl>
